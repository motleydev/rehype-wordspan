{
  "name": "rehype-wordspan",
  "version": "0.0.0-semantic-release",
  "description": "Highlight code blocks",
  "license": "MIT",
  "keywords": [
    "rehype",
    "hast",
    "syntax",
    "span"
  ],
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/motleydev/rehype-wordspan.git"
  },
  "bugs": "https://github.com/motleydev/rehype-wordspan/issues",
  "author": "Jesse David Martin <admin@jessedavidmartin.com> (https://jessedavidmartin.com)",
  "dependencies": {
    "unist-util-visit": "^1.1.0"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-stage-2": "6.17.0",
    "babel-register": "6.16.3",
    "browserify": "^13.0.1",
    "chai": "3.5.0",
    "codecov": "1.0.1",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "^2.0.0",
    "esmangle": "^1.0.1",
    "ghooks": "1.3.2",
    "istanbul": "^0.4.0",
    "jscs": "^3.0.0",
    "jscs-jsdoc": "^2.0.0",
    "mocha": "3.1.2",
    "nyc": "8.3.2",
    "onchange": "3.0.2",
    "rehype": "^1.0.0",
    "remark-cli": "^1.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^4.0.0",
    "remark-usage": "^4.0.0",
    "remark-validate-links": "^4.0.0",
    "rimraf": "2.5.4",
    "semantic-release": "4.3.5",
    "standard": "8.4.0",
    "tape": "^4.0.0",
    "unist-util-inspect": "^4.0.0"
  },
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "post-build": "onchange 'dist/**.js' 'test.js' -- npm test",
    "build": "babel index.js -d dist",
    "lint-api": "eslint .",
    "lint-style": "jscs --reporter inline .",
    "lint": "npm run lint-api && npm run lint-style",
    "cover": "nyc npm t",
    "check-coverage": "nyc check-coverage --statements 100 --functions 100",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && ./node_modules/.bin/codecov",
    "test": "standard && mocha test.js --compilers js:babel-register",
    "watch": "npm run build -- -w & npm run post-build",
    "watch:test": "npm t -- -w",
    "prepublish": "NODE_ENV='production' npm run build && npm test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "standard": {
    "ignore": [
      "coverage/**",
      "dist/**",
      "node_modules/**",
      "example.js"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
